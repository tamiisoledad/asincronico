<%- include('./partials/head', { title : "Movie add" }) %> 
<body class="movieAdd">
    <%- include('./partials/header') %> 
    <main>
        <h1 class="moviesAddTitulo"></h1>
        <br>
        <section id="" >
            <article >
                <form id="form-add" method="POST">
                    <div id="error">
                        <h4 id="error-msg"></h4>
                    </div>
                    <label for="title">Titulo </label>
                    <div class="input-form">
                        <input type="text" name="title" id="title" >
                        <p id="title-msg"></p>
                    </div>
                    <label for="rating">Calificación </label>
                    <div class="input-form">
                        <input type="number" name="rating" id="rating" >
                        <p id="rating-msg"></p>
                    </div>
                    <label for="awards">Premios </label>
                    <div class="input-form">
                        <input type="number" name="awards" id="awards" >
                        <p id="awards-msg"></p>
                    </div>
                    <label for="release_date">Fecha de creación </label>
                    <div class="input-form">
                        <input type="date" name="release_date" id="release_date" >
                        <p id="release_date-msg"></p>
                    </div>
                    <label for="length">Duración </label>
                    <div class="input-form">
                        <input type="number" name="length" id="length" >
                        <p id="length-msg"></p>
                    </div>
                    <label for="genre_id">Género </label>
                    <div class="input-form">
                        
                            <select name="genre_id" id="genre_id" >
                                <option value="" disabled selected>- Seleccione el género - </option>
                                <% allGenres.forEach(genre => { %>
                                <option value="<%= genre.id %>"><%= genre.name %></option>
                                <% }); %>
                            </select>
                        
                        <p id="genre_id-msg"></p>
                    </div>
                    <br>
                    <p class="btn-container"> <button class="botonAgregar" type="submit">Agregar</button>
                    
                    <a  class="botonVolver" href="/movies">Listado de Películas</a></p>
                </form>
            </article>
        </section>
        <div id="info"></div>
    </main>
    
<%- include('./partials/bodyEnd.ejs') %> 